<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Student Detail</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Student Detail</h1>
      <div class="muted">
        <a class="link" href="/admin">← Back to Admin</a>
        &nbsp; • &nbsp;
        Logged in as <b><%= user.email %></b>
      </div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <div class="row-between">
      <div>
        <h2><%= student.email %></h2>
        <div class="muted">
          <b><%= (student.first_name || '') %> <%= (student.last_name || '') %></b>
          • Level <%= student.level %>
          • <%= student.status %>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <h2>Identity & Progress</h2>

    <form method="POST" action="/admin/students/<%= student.id %>/update-identity" class="grid2">
      <div class="stack">
        <label>First Name</label>
        <input name="first_name" value="<%= student.first_name || '' %>" />
      </div>

      <div class="stack">
        <label>Last Name</label>
        <input name="last_name" value="<%= student.last_name || '' %>" />
      </div>

      <div class="stack">
        <label>Phone</label>
        <input name="phone" value="<%= student.phone || '' %>" />
      </div>

      <div class="stack">
        <label>Employer Name</label>
        <input name="employer_name" value="<%= student.employer_name || '' %>" />
      </div>

      <div class="stack">
        <label>Level</label>
        <select name="level">
          <% LEVELS.forEach(l => { %>
            <option value="<%= l %>" <%= Number(student.level) === l ? 'selected' : '' %>><%= l %></option>
          <% }) %>
        </select>
      </div>

      <div class="stack">
        <label>Status</label>
        <select name="status">
          <% STUDENT_STATUSES.forEach(st => { %>
            <option value="<%= st %>" <%= student.status === st ? 'selected' : '' %>><%= st %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <button>Save Identity / Progress</button>
      </div>
    </form>
  </div>

  <div class="card">
    <div class="row-between">
      <div>
        <h2>Document Vault</h2>
        <div class="muted small">
          Admin upload + download. Files are grouped by required category for fast review.
        </div>
      </div>
      <div class="right">
        <a class="btn" href="/admin/students/<%= student.id %>/docs/download-all">Download All (ZIP)</a>
      </div>
    </div>

    <form method="POST" action="/admin/students/<%= student.id %>/docs/upload" enctype="multipart/form-data" class="grid2">
      <div class="stack">
        <label>Category (required)</label>
        <select name="category" required>
          <% DOC_CATEGORIES.forEach(c => { %>
            <option value="<%= c %>"><%= c %></option>
          <% }) %>
        </select>
      </div>

      <div class="stack">
        <label>Title (optional but recommended)</label>
        <input name="title" placeholder="e.g. CO Apprentice Card - 2026" />
      </div>

      <div class="stack">
        <label>File</label>
        <input type="file" name="file" required />
      </div>

      <div>
        <button>Upload Document</button>
      </div>
    </form>

    <hr />

    <% if (!groupedDocs || !groupedDocs.length) { %>
      <div class="muted">No documents uploaded yet.</div>
    <% } else { %>
      <% groupedDocs.forEach(group => { %>
        <h3><%= group.category %> (<%= group.docs.length %>)</h3>
        <table>
          <tr>
            <th>Title</th>
            <th>Original Filename</th>
            <th>Uploaded</th>
            <th>By</th>
            <th>Download</th>
          </tr>
          <% group.docs.forEach(d => { %>
            <tr>
              <td><%= d.title || d.original_filename %></td>
              <td class="small"><%= d.original_filename %></td>
              <td class="small"><%= new Date(d.created_at).toLocaleString() %></td>
              <td class="small"><%= d.uploader_email || 'Unknown' %></td>
              <td><a class="btn" href="/documents/<%= d.id %>/download">Download</a></td>
            </tr>
          <% }) %>
        </table>
      <% }) %>
    <% } %>

  </div>

</body>
</html>
