<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Employer Detail</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Employer Detail</h1>
      <div class="muted">
        <a class="link" href="/admin">← Back to Admin</a>
        &nbsp; • &nbsp;
        Logged in as <b><%= user.email %></b>
      </div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <div class="row-between">
      <div>
        <h2><%= employer.email %></h2>
        <div class="muted">
          <b><%= employer.company_name || '' %></b>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <h2>Company Profile</h2>
    <form method="POST" action="/admin/employers/<%= employer.id %>/update" class="grid2">
      <div class="stack">
        <label>Company Name *</label>
        <input name="company_name" value="<%= employer.company_name || '' %>" required />
      </div>

      <div class="stack">
        <label>Contact Name *</label>
        <input name="contact_name" value="<%= employer.contact_name || '' %>" required />
      </div>

      <div class="stack">
        <label>Phone *</label>
        <input name="phone" value="<%= employer.phone || '' %>" required />
      </div>

      <div>
        <button>Save Employer Profile</button>
      </div>
    </form>
  </div>

</body>
</html>
