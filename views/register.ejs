<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI - Account Request</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">
  <div class="topbar">
    <div>
      <h1>Request an Account</h1>
      <div class="muted">Submit your info and AEI will follow up.</div>
    </div>
    <a class="link" href="/login">Back to Login</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <form method="POST" action="/register" class="grid2">
      <div class="stack">
        <label>Email</label>
        <input name="email" type="email" required />
      </div>

      <div class="stack">
        <label>Are you a Student or Employer?</label>
        <select name="type" required>
          <option value="student">Student</option>
          <option value="employer">Employer</option>
        </select>
      </div>

      <div class="stack">
        <label>Name</label>
        <input name="name" placeholder="Full name" />
      </div>

      <div class="stack">
        <label>Phone</label>
        <input name="phone" placeholder="Optional" />
      </div>

      <div class="stack" style="grid-column: 1 / -1;">
        <label>Notes</label>
        <input name="notes" placeholder="Optional message to AEI" />
      </div>

      <div>
        <button>Submit Request</button>
      </div>
    </form>
  </div>
</body>
</html>
