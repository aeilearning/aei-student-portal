<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Admin Dashboard</h1>
      <div class="muted">Logged in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <!-- ===================================================== -->
  <!-- CREATE STUDENT -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Create Student</h2>
    <form method="POST" action="/admin/students/create" class="grid2">
      <div class="stack">
        <label>Student Email</label>
        <input name="email" type="email" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="Auto-generated if blank" />
      </div>
      <div>
        <button>Create Student</button>
      </div>
    </form>
  </div>

  <!-- ===================================================== -->
  <!-- STUDENTS -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Students</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Employer</th>
        <th>Level</th>
        <th>Status</th>
        <th>Save</th>
        <th>Delete</th>
      </tr>

      <% students.forEach(s => { %>
        <tr>
          <form method="POST" action="/admin/students/<%= s.id %>/update">
            <td><%= s.email %></td>

            <td>
              <input name="first_name" value="<%= s.first_name || '' %>" placeholder="First" />
              <input name="last_name" value="<%= s.last_name || '' %>" placeholder="Last" />
            </td>

            <td>
              <input name="phone" value="<%= s.phone || '' %>" />
            </td>

            <td>
              <input name="employer_name" value="<%= s.employer_name || '' %>" />
            </td>

            <td>
              <select name="level">
                <% LEVELS.forEach(l => { %>
                  <option value="<%= l %>" <%= Number(s.level) === l ? 'selected' : '' %>>
                    <%= l %>
                  </option>
                <% }) %>
              </select>
            </td>

            <td>
              <select name="status">
                <% STUDENT_STATUSES.forEach(st => { %>
                  <option value="<%= st %>" <%= s.status === st ? 'selected' : '' %>>
                    <%= st %>
                  </option>
                <% }) %>
              </select>
            </td>

            <td>
              <button>Save</button>
            </td>
          </form>

          <td>
            <form method="POST" action="/admin/students/<%= s.id %>/delete">
              <button onclick="return confirm('Delete this student?')">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

  <!-- ===================================================== -->
  <!-- CREATE EMPLOYER -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Create Employer</h2>
    <form method="POST" action="/admin/employers/create" class="grid2">
      <div class="stack">
        <label>Employer Email</label>
        <input name="email" type="email" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="Auto-generated if blank" />
      </div>
      <div>
        <button>Create Employer</button>
      </div>
    </form>
  </div>

  <!-- ===================================================== -->
  <!-- EMPLOYERS -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Employers</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>Company</th>
        <th>Contact</th>
        <th>Phone</th>
        <th>Save</th>
        <th>Delete</th>
      </tr>

      <% employers.forEach(e => { %>
        <tr>
          <form method="POST" action="/admin/employers/<%= e.id %>/update">
            <td><%= e.email %></td>

            <td>
              <input name="company_name" value="<%= e.company_name || '' %>" />
            </td>

            <td>
              <input name="contact_name" value="<%= e.contact_name || '' %>" />
            </td>

            <td>
              <input name="phone" value="<%= e.phone || '' %>" />
            </td>

            <td>
              <button>Save</button>
            </td>
          </form>

          <td>
            <form method="POST" action="/admin/employers/<%= e.id %>/delete">
              <button onclick="return confirm('Delete this employer?')">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

</body>
</html>
