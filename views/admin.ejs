<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Admin Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Admin Dashboard</h1>
      <div class="muted">Logged in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Create Student</h2>
    <form method="POST" action="/admin/students/create" class="grid2">
      <div class="stack">
        <label>Student Email</label>
        <input name="email" type="email" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="Auto-generated if blank" />
      </div>
      <div>
        <button>Create Student</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Students</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Employer</th>
        <th>Level</th>
        <th>Status</th>
        <th>RAPIDS</th>
        <th>Docs</th>
        <th>Actions</th>
        <th>Delete</th>
      </tr>

      <% students.forEach(s => { %>
        <tr>
          <td><%= s.email %></td>
          <td><%= (s.first_name || '') %> <%= (s.last_name || '') %></td>
          <td><%= s.employer_name || '' %></td>
          <td>Level <%= s.level %></td>
          <td><%= s.status %></td>
          <td>
            <span class="pill <%= s.rapids_code %>"><%= s.rapids_label %></span>
          </td>
          <td><%= s.docs_count %></td>
          <td>
            <a class="btn" href="/admin/students/<%= s.id %>">View / Edit</a>
          </td>
          <td>
            <form method="POST" action="/admin/students/<%= s.id %>/delete">
              <button class="danger" onclick="return confirm('Delete this student and their login?')">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

  <div class="card">
    <h2>Create Employer</h2>
    <form method="POST" action="/admin/employers/create" class="grid2">
      <div class="stack">
        <label>Employer Email</label>
        <input name="email" type="email" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="Auto-generated if blank" />
      </div>
      <div>
        <button>Create Employer</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Employers</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>Company</th>
        <th>Contact</th>
        <th>Phone</th>
        <th>Delete</th>
      </tr>

      <% employers.forEach(e => { %>
        <tr>
          <td><%= e.email %></td>
          <td><%= e.company_name || '' %></td>
          <td><%= e.contact_name || '' %></td>
          <td><%= e.phone || '' %></td>
          <td>
            <form method="POST" action="/admin/employers/<%= e.id %>/delete">
              <button class="danger" onclick="return confirm('Delete this employer and their login?')">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

</body>
</html>
