<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Admin</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Admin Dashboard</h1>
      <div class="muted">Logged in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Create Student</h2>
    <form method="POST" action="/admin/students/create" class="grid2">
      <div class="stack">
        <label>Student Email</label>
        <input name="email" placeholder="student@example.com" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="leave blank for auto" />
      </div>
      <div>
        <button>Create Student</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Create Employer</h2>
    <form method="POST" action="/admin/employers/create" class="grid2">
      <div class="stack">
        <label>Employer Email</label>
        <input name="email" placeholder="employer@example.com" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="leave blank for auto" />
      </div>
      <div>
        <button>Create Employer</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Pending Student Profile Updates</h2>
    <% if (!pendingChanges || !pendingChanges.length) { %>
      <div class="muted small">No pending profile updates.</div>
    <% } else { %>
      <table>
        <tr>
          <th>Student</th>
          <th>Section</th>
          <th>Submitted</th>
          <th>Changes</th>
          <th>Approve</th>
        </tr>
        <% pendingChanges.forEach(c => { %>
          <tr>
            <td>
              <div><%= c.first_name || '' %> <%= c.last_name || '' %></div>
              <div class="small muted"><%= c.email %></div>
            </td>
            <td><%= c.section %></td>
            <td class="small"><%= new Date(c.created_at).toLocaleString() %></td>
            <td class="small">
              <ul>
                <% Object.entries(c.changes || {}).forEach(([key, value]) => { %>
                  <li><%= key %>: <%= value === null || value === '' ? 'â€”' : value %></li>
                <% }) %>
              </ul>
            </td>
            <td>
              <form method="POST" action="/admin/student-changes/<%= c.id %>/approve">
                <button class="btn" type="submit">Approve</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

  <div class="card">
    <h2>Pending Student Documents</h2>
    <% if (!pendingDocs || !pendingDocs.length) { %>
      <div class="muted small">No pending documents.</div>
    <% } else { %>
      <table>
        <tr>
          <th>Student</th>
          <th>Document</th>
          <th>Uploaded</th>
          <th>Review</th>
          <th>Approve</th>
        </tr>
        <% pendingDocs.forEach(d => { %>
          <tr>
            <td>
              <div><%= d.first_name || '' %> <%= d.last_name || '' %></div>
              <div class="small muted"><%= d.email %></div>
            </td>
            <td>
              <div><%= d.doc_type %></div>
              <div class="small muted"><%= d.title %></div>
            </td>
            <td class="small"><%= new Date(d.created_at).toLocaleString() %></td>
            <td><a class="btn" href="/admin/docs/<%= d.id %>/download">Download</a></td>
            <td>
              <form method="POST" action="/admin/student-docs/<%= d.id %>/approve">
                <button class="btn" type="submit">Approve</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

  <div class="card">
    <h2>Students</h2>
    <% if (!students || !students.length) { %>
      <div class="muted small">No students yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Level</th>
          <th>Status</th>
          <th>Open</th>
        </tr>
        <% students.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.email %></td>
            <td><%= (s.first_name || '') %> <%= (s.last_name || '') %></td>
            <td><%= s.level %></td>
            <td><%= s.status %></td>
            <td><a class="btn" href="/admin/students/<%= s.id %>">Open</a></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

  <div class="card">
    <h2>Employers</h2>
    <% if (!employers || !employers.length) { %>
      <div class="muted small">No employers yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Company</th>
          <th>Open</th>
        </tr>
        <% employers.forEach(e => { %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.email %></td>
            <td><%= e.company_name || '' %></td>
            <td><a class="btn" href="/admin/employers/<%= e.id %>">Open</a></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

</body>
</html>
