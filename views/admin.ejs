<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Admin</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <h1>Admin Dashboard</h1>
    <div class="muted">Logged in as <b><%= user.email %></b></div>
    <a href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <h2>Add Student</h2>
  <form method="POST" action="/admin/students">
    <input name="email" placeholder="Student email" required />
    <button>Add</button>
  </form>

  <h2>Students</h2>

  <table border="1" cellpadding="6">
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Level</th>
      <th>Email</th>
      <th>Save</th>
      <th>Delete</th>
    </tr>

    <% students.forEach(s => { %>
      <tr>
        <td><%= s.student_id %></td>

        <td>
          <form method="POST" action="/admin/update/<%= s.id %>">
            <select name="status">
              <% STATUSES.forEach(v => { %>
                <option <%= v === s.status ? "selected" : "" %>><%= v %></option>
              <% }) %>
            </select>
        </td>

        <td>
            <select name="level">
              <% LEVELS.forEach(v => { %>
                <option <%= v === s.level ? "selected" : "" %>><%= v %></option>
              <% }) %>
            </select>
        </td>

        <td><%= s.email || "" %></td>

        <td>
            <button>Save</button>
          </form>
        </td>

        <td>
          <form method="POST" action="/admin/delete/<%= s.id %>">
            <button onclick="return confirm('Delete student?')">X</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

</body>
</html>
