<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Admin</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Admin Dashboard</h1>
      <div class="muted">Logged in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Create Student</h2>
    <form method="POST" action="/admin/students/create" class="grid2">
      <div class="stack">
        <label>Student Email</label>
        <input name="email" placeholder="student@example.com" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="leave blank for auto" />
      </div>
      <div>
        <button>Create Student</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Create Employer</h2>
    <form method="POST" action="/admin/employers/create" class="grid2">
      <div class="stack">
        <label>Employer Email</label>
        <input name="email" placeholder="employer@example.com" required />
      </div>
      <div class="stack">
        <label>Temp Password (optional)</label>
        <input name="temp_password" placeholder="leave blank for auto" />
      </div>
      <div>
        <button>Create Employer</button>
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Students</h2>
    <% if (!students || !students.length) { %>
      <div class="muted small">No students yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Level</th>
          <th>Status</th>
          <th>Open</th>
        </tr>
        <% students.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.email %></td>
            <td><%= (s.first_name || '') %> <%= (s.last_name || '') %></td>
            <td><%= s.level %></td>
            <td><%= s.status %></td>
            <td><a class="btn" href="/admin/students/<%= s.id %>">Open</a></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

  <div class="card">
    <h2>Employers</h2>
    <% if (!employers || !employers.length) { %>
      <div class="muted small">No employers yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Company</th>
        </tr>
        <% employers.forEach(e => { %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.email %></td>
            <td><%= e.company_name || '' %></td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

</body>
</html>
