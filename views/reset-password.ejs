<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Reset Password</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="card">
    <div class="header">
      <h1>Password Reset</h1>
      <p class="muted">Password resets are handled by AEI administration.</p>
    </div>

    <% if (message) { %>
      <div class="alert"><%= message %></div>
    <% } %>

    <form method="POST" action="/reset-password" class="stack">
      <div class="stack">
        <label>Email</label>
        <input name="email" type="email" required />
      </div>

      <div class="stack">
        <label>Details (optional)</label>
        <textarea name="note" rows="4" placeholder="Anything AEI should knowâ€¦"></textarea>
      </div>

      <button class="btn" type="submit">Submit Request</button>
    </form>

    <div class="divider"></div>
    <a class="link" href="/login">Back to login</a>
  </div>

</body>
</html>
