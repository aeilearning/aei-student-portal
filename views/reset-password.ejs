<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI - Reset Password</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">
  <div class="topbar">
    <div>
      <h1>Password Help</h1>
      <div class="muted">Request a password reset from AEI.</div>
    </div>
    <a class="link" href="/login">Back to Login</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <form method="POST" action="/reset-password" class="grid2">
      <div class="stack">
        <label>Email</label>
        <input name="email" type="email" required />
      </div>

      <div class="stack">
        <label>Phone (optional)</label>
        <input name="phone" placeholder="Optional" />
      </div>

      <div style="grid-column: 1 / -1;">
        <button>Request Reset</button>
      </div>
    </form>
  </div>
</body>
</html>
