<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Employer Portal</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Employer Portal</h1>
      <div class="muted">Signed in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Employer Profile</h2>
    <div class="grid2">
      <div class="stack">
        <label>Company</label>
        <input value="<%= employer.company_name || '' %>" disabled />
      </div>
      <div class="stack">
        <label>Contact</label>
        <input value="<%= employer.contact_name || '' %>" disabled />
      </div>
      <div class="stack">
        <label>Phone</label>
        <input value="<%= employer.phone || '' %>" disabled />
      </div>
      <div class="muted small">
        Profile edits are managed by AEI administration for compliance.
      </div>
    </div>
  </div>

  <div class="card">
    <div class="row-between">
      <div>
        <h2>Document Vault</h2>
        <p class="muted small">
          Upload compliance paperwork into a required category so AEI can find it quickly.
          Upload & download only â€” no deletions from your side.
        </p>
      </div>
      <div class="right">
        <a class="btn" href="/employer/documents/download-all">Download All (ZIP)</a>
      </div>
    </div>

    <form method="POST" action="/employer/documents/upload" enctype="multipart/form-data" class="grid2">
      <div class="stack">
        <label>Category (required)</label>
        <select name="category" required>
          <% DOC_CATEGORIES.forEach(c => { %>
            <option value="<%= c %>"><%= c %></option>
          <% }) %>
        </select>
      </div>

      <div class="stack">
        <label>Title (optional but recommended)</label>
        <input name="title" placeholder="Example: Pay Records - Q1 2026" />
      </div>

      <div class="stack">
        <label>File</label>
        <input type="file" name="file" required />
      </div>

      <div>
        <button>Upload Document</button>
      </div>
    </form>

    <hr />

    <% if (!groupedDocs || !groupedDocs.length) { %>
      <div class="muted small">No documents uploaded yet.</div>
    <% } else { %>
      <% groupedDocs.forEach(group => { %>
        <h3><%= group.category %> (<%= group.docs.length %>)</h3>
        <table>
          <tr>
            <th>Title</th>
            <th>Original Filename</th>
            <th>Uploaded</th>
            <th>Download</th>
          </tr>
          <% group.docs.forEach(d => { %>
            <tr>
              <td><%= d.title || d.original_filename %></td>
              <td class="small"><%= d.original_filename %></td>
              <td class="small"><%= new Date(d.created_at).toLocaleString() %></td>
              <td><a class="btn" href="/documents/<%= d.id %>/download">Download</a></td>
            </tr>
          <% }) %>
        </table>
      <% }) %>
    <% } %>
  </div>

</body>
</html>
