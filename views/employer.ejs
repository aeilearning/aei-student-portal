<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Employer Portal</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Employer Portal</h1>
      <div class="muted">Signed in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Account Information</h2>
    <form method="POST" action="/employer/update" class="grid2">
      <div class="stack">
        <label>Email (read only)</label>
        <input value="<%= user.email %>" disabled />
      </div>

      <div class="stack">
        <label>Company Name</label>
        <input value="<%= employer.company_name || '' %>" disabled />
      </div>

      <div class="stack">
        <label>Primary Contact</label>
        <input value="<%= employer.contact_name || '' %>" disabled />
      </div>

      <div class="stack">
        <label>Phone</label>
        <input value="<%= employer.phone || '' %>" disabled />
      </div>

      <div class="muted small">
        Employer profile edits are managed by AEI administration for compliance.
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Employer Document Vault</h2>
    <p class="muted small">
      Store company documents here (agreements, forms, audit correspondence, etc.).
    </p>

    <form method="POST" action="/employer/documents/upload" enctype="multipart/form-data" class="grid2">
      <div class="stack">
        <label>Document Type</label>
        <select name="doc_type">
          <% DOC_TYPES.forEach(dt => { %>
            <option value="<%= dt %>"><%= dt %></option>
          <% }) %>
        </select>
      </div>

      <div class="stack">
        <label>Title (optional)</label>
        <input name="title" placeholder="Example: Training Agreement 2026" />
      </div>

      <div class="stack">
        <label>Notes (optional)</label>
        <input name="notes" placeholder="Anything helpful for audits" />
      </div>

      <div class="stack">
        <label>File</label>
        <input type="file" name="file" required />
      </div>

      <div>
        <button>Upload Document</button>
      </div>
    </form>

    <hr />

    <h3>Stored Documents</h3>
    <% if (!documents || !documents.length) { %>
      <div class="muted small">No documents uploaded yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>Type</th>
          <th>Title</th>
          <th>File</th>
          <th>Uploaded</th>
          <th>Download</th>
          <th>Delete</th>
        </tr>
        <% documents.forEach(d => { %>
          <tr>
            <td><%= d.doc_type %></td>
            <td><%= d.title || '' %></td>
            <td class="small"><%= d.original_filename %></td>
            <td class="small"><%= new Date(d.uploaded_at).toLocaleString() %></td>
            <td><a class="link" href="/documents/<%= d.id %>/download">Download</a></td>
            <td>
              <form method="POST" action="/documents/<%= d.id %>/delete">
                <button onclick="return confirm('Delete this document?')">X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

</body>
</html>
