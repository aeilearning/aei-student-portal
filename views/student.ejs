<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Student Portal</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Student Portal</h1>
      <div class="muted">Signed in as <b><%= user.email %></b></div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <% if (message) { %>
    <div class="alert"><%= message %></div>
  <% } %>

  <div class="card">
    <h2>Your Status</h2>
    <div class="grid2">
      <div>
        <div class="muted small">Current Status</div>
        <div class="pill"><%= student.status %></div>
      </div>
      <div>
        <div class="muted small">Current Level</div>
        <div class="pill">Level <%= student.level %></div>
      </div>
    </div>
  </div>

  <div class="card">
    <h2>Your Information</h2>

    <form method="POST" action="/student/update" class="grid2">
      <div class="stack">
        <label>Email (read only)</label>
        <input value="<%= user.email %>" disabled />
      </div>

      <div class="stack">
        <label>First Name</label>
        <input name="first_name" value="<%= student.first_name || '' %>" disabled />
      </div>

      <div class="stack">
        <label>Last Name</label>
        <input name="last_name" value="<%= student.last_name || '' %>" disabled />
      </div>

      <div class="stack">
        <label>Phone</label>
        <input name="phone" value="<%= student.phone || '' %>" disabled />
      </div>

      <div class="stack">
        <label>Employer</label>
        <input name="employer_name" value="<%= student.employer_name || '' %>" disabled />
      </div>

      <div class="muted small">
        Profile edits are managed by AEI administration for compliance.
      </div>
    </form>
  </div>

  <div class="card">
    <h2>Document Vault</h2>
    <p class="muted small">
      Store important documents here so you never lose them (IDs, apprentice cards, journeyman certificates,
      affidavits, transcripts, completion certificates, etc.). This helps with compliance and audits.
    </p>

    <form method="POST" action="/student/documents/upload" enctype="multipart/form-data" class="grid2">
      <div class="stack">
        <label>Document Type</label>
        <select name="doc_type">
          <% DOC_TYPES.forEach(dt => { %>
            <option value="<%= dt %>"><%= dt %></option>
          <% }) %>
        </select>
      </div>

      <div class="stack">
        <label>Title (optional)</label>
        <input name="title" placeholder="Example: 2026 Apprentice Card" />
      </div>

      <div class="stack">
        <label>Notes (optional)</label>
        <input name="notes" placeholder="Anything helpful for audits" />
      </div>

      <div class="stack">
        <label>File</label>
        <input type="file" name="file" required />
      </div>

      <div>
        <button>Upload Document</button>
      </div>
    </form>

    <hr />

    <h3>Stored Documents</h3>
    <% if (!documents || !documents.length) { %>
      <div class="muted small">No documents uploaded yet.</div>
    <% } else { %>
      <table>
        <tr>
          <th>Type</th>
          <th>Title</th>
          <th>File</th>
          <th>Uploaded</th>
          <th>Download</th>
          <th>Delete</th>
        </tr>
        <% documents.forEach(d => { %>
          <tr>
            <td><%= d.doc_type %></td>
            <td><%= d.title || '' %></td>
            <td class="small"><%= d.original_filename %></td>
            <td class="small"><%= new Date(d.uploaded_at).toLocaleString() %></td>
            <td><a class="link" href="/documents/<%= d.id %>/download">Download</a></td>
            <td>
              <form method="POST" action="/documents/<%= d.id %>/delete">
                <button onclick="return confirm('Delete this document?')">X</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
    <% } %>
  </div>

</body>
</html>
