<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>AEI Student Portal</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="container">

  <div class="topbar">
    <div>
      <h1>Student Portal</h1>
      <div class="muted">
        Signed in as <b><%= user.email %></b>
      </div>
    </div>
    <a class="link" href="/logout">Logout</a>
  </div>

  <!-- ===================================================== -->
  <!-- STATUS SUMMARY -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Your Status</h2>

    <div class="grid2">
      <div>
        <div class="muted small">Current Status</div>
        <div class="pill"><%= student.status %></div>
      </div>

      <div>
        <div class="muted small">Current Level</div>
        <div class="pill">Level <%= student.level %></div>
      </div>
    </div>
  </div>

  <!-- ===================================================== -->
  <!-- PERSONAL INFORMATION -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Your Information</h2>

    <form method="POST" action="/student/update" class="grid2">
      <div class="stack">
        <label>Email (read only)</label>
        <input value="<%= user.email %>" disabled />
      </div>

      <div class="stack">
        <label>First Name</label>
        <input name="first_name" value="<%= student.first_name || '' %>" />
      </div>

      <div class="stack">
        <label>Last Name</label>
        <input name="last_name" value="<%= student.last_name || '' %>" />
      </div>

      <div class="stack">
        <label>Phone</label>
        <input name="phone" value="<%= student.phone || '' %>" />
      </div>

      <div class="stack">
        <label>Employer</label>
        <input
          name="employer_name"
          value="<%= student.employer_name || '' %>"
          placeholder="Company name"
        />
      </div>

      <div>
        <button>Save Changes</button>
      </div>
    </form>
  </div>

  <!-- ===================================================== -->
  <!-- NOTES -->
  <!-- ===================================================== -->
  <div class="card">
    <h2>Important Notes</h2>
    <ul class="small muted">
      <li>Your level and status are managed by AEI administration.</li>
      <li>If anything looks incorrect, contact AEI directly.</li>
      <li>This portal is for administrative coordination only.</li>
    </ul>
  </div>

</body>
</html>
